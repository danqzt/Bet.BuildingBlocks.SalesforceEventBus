<Project>
  <PropertyGroup Label="Basic Settings">
    <IsPackable>true</IsPackable>
    <VersionPrefix>2.1.0-pre</VersionPrefix>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Label="Nuget Package Settings">
		<Description>Event Bus for Salesforce Platform events.</Description>
		<PackageProjectUrl>https://github.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/kdcllc/CometD.NetCore.Salesforce.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicense>https://github.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus/blob/master/LICENSE</PackageLicense>
		<RepositoryUrl>https://github.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus.git</RepositoryUrl>
 		<PackageIconUrl>https://raw.githubusercontent.com/kdcllc/Bet.BuildingBlocks.SalesforceEventBus/master/img/logo64x64.png</PackageIconUrl>
    <PackageTags>aspnetcore,dottet,salesforce, cometd, bayeux,salesforce, cometd, bayeux, event, platform event, building blocks</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Label="SourceLink Settings">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
</Project>
